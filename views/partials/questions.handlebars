<ol class="question-list">
    <article class="qs">
      <div class="question">
        {{questionAsked}}
      </div>
      <div class ="answerChoices">
        <li>
          <input type='radio' id='green' name='answers{{id}}' value="green">
          <label for='green'>
          {{greenAnswerChoice}}
          </label>
        </li>
        <li>
          <input type='radio' id='red' name='answers{{id}}' value="red">
          <label for='red'>
          {{redAnswerChoice}}
          </label>
        </li>
        <li>
          <input type='radio' id='yellow' name='answers{{id}}' value="yellow">
          <label for='yellow'>
          {{yellowAnswerChoice}}
          </label>
        </li>
        <li>
          <input type='radio' id='blue' name='answers{{id}}' value="blue">
          <label for='blue'>
          {{blueAnswerChoice}}
          </label>
        </li>
        <input type='submit' id='confirm-btn' onclick='hideBtn'value="Confirm Answer!">
      </div>
    </article>
</ol>
